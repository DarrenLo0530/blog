<h1>All Articles</h1>

<div class = 'article-list'>
    <% if @articles.size() == 0 %>
        <p>There are currently no articles</p>
    <% else %>   
        <ul>
        
            <% @articles.each do |article| %>
                <li>
                    <%= link_to article.title, article_path(article), class: "article-title" %>
                </li>
            <% end %>
        </ul>
    <%end%>

</div>
    

<% if logged_in? %>
    <%= link_to "Create New Article", new_article_path, class: "new-article" %>
<% end %>
