<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header> 
        <ul class = 'navbar'>

            <li><%=link_to "Home", root_path%></li>
            <li><%= link_to "Articles", articles_path%></li>
            <%if logged_in?%>
                <li><%= link_to "Authors", authors_path%></li>
            <%end%>
            <li><%= link_to "Tags", tags_path%></li>

            
            <li class = "dropdown">
                <%if logged_in?%>
                    <%= link_to "Hi, #{current_user.username}", author_path(current_user), class: 'dropdown-button'%>
                    <ul class = 'dropdown-menu'>
                        <li><%= link_to "View Profile", author_path(current_user)%></li>
                        <%= link_to "Edit Profile",  edit_author_path(current_user) %>
                        <li><%= link_to "Logout", logout_path%></li>
                    </ul>
                <% else %>
                    <%= link_to "Log in", login_path, class: 'dropdown-button'%>
                    <ul class = 'dropdown-menu'>
                        <%=link_to "New Account", new_author_path %>
                    </ul>
                <%end%>
            </li>
        </ul>
    </header>

    <p class = "flash">
        <%= flash.notice %>
    </p>
    <%= yield %>
  </body>

  
</html>
